<resources>

  <!--Tema do SplashScreen-->
  <style name="Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/saturn</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <!--Tema Principal-->
  <style name="TemaProjetoN10" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/colorWindowBackground</item>
    <item name="windowActionModeOverlay">true</item>
  </style>

  <!--Tema para EditText (Usar quando quiser)-->
  <style name="EditAparencia" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

  <!--Tema para Button (primÃ¡rio)-->
  <style name="PrimaryButton" parent="Theme.AppCompat">
    <item name="colorButtonNormal">@color/colorPrimary</item>
    <item name="colorControlHighlight">@color/colorAccent</item>
  </style>

  <!--Tema para Button (Flat - Sem fundo)-->
  <style name="PrimaryFlatButton" parent="Theme.AppCompat.Light">
    <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    <item name="colorControlHighlight">@color/colorAccent</item>
    <item name="colorAccent">@color/colorPrimary</item>
  </style>

</resources>
